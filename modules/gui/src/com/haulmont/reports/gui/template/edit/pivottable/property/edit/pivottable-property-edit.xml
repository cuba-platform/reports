<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.reports.gui.template.edit.pivottable.property.edit.PivotTablePropertyEdit"
        caption="msg://pivotTablePropertyEditor"
        messagesPack="com.haulmont.reports.gui" datasource="propertyDs">

    <dsContext>
        <datasource id="propertyDs" class="com.haulmont.reports.entity.pivottable.PivotTableProperty"
                    allowCommit="false"/>
    </dsContext>

    <dialogMode height="AUTO"
                width="AUTO"
                resizable="true"
                modal="true"/>

    <layout spacing="true" expand="editBox">
        <groupBox id="editBox" showAsPanel="true">
            <fieldGroup id="editGroup" datasource="propertyDs" width="100%">
                <column width="100%">
                    <field property="name" width="337px"/>
                    <field property="caption" width="337px"/>
                    <field property="type" required="true" width="337px"/>
                    <field id="function" property="function" width="355px">
                        <sourceCodeEditor id="sourceCodeEditor"
                                          property="function"
                                          datasource="propertyDs"
                                          editable="true"
                                          mode="JavaScript"
                                          height="300px"
                                          width="100%"/>

                    </field>
                </column>
            </fieldGroup>
        </groupBox>
        <frame id="windowActions" screen="editWindowActions" width="AUTO"/>
    </layout>
</window>